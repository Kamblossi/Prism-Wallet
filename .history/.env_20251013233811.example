# Prism Wallet - Example Environment File

# App
APP_URL=http://localhost:8081
TZ=Africa/Nairobi

# Database (Docker compose uses these defaults)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=prism_wallet_dev
DB_USER=postgres
DB_PASSWORD=postgres

# Clerk (optional for local dev; set DISABLE_AUTH=1 to bypass)
CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Development only: bypass auth entirely
DISABLE_AUTH=1
